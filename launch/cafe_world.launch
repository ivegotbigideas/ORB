<launch>
    <!-- We assume that your world file and URDF file are properly set up in their directories -->

    <!-- Load the Gazebo world -->
    <arg name="world_file" default="$(find orb)/worlds/cafe.world"/>
  
    <!-- Start Gazebo with the cafe world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_file)"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <!-- Load robot description parameter -->
    <param name="robot_description"
        command="$(find xacro)/xacro --inorder '$(find orb)/urdf/simple_bot.urdf.xacro'" />

    <!-- Spawn the robot into Gazebo -->
    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -model simple_bot -z 1 -param robot_description"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen"/>

    <!-- Include keyboard_telop -->
    <include file="$(find socspioneer)/launch/keyboard_teleop.launch"/>

    <!-- SLAM Gmapping -->
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen" args="scan:=base_scan">
        <param name="base_frame" value="base_link"/>
        <param name="odom_frame" value="odom"/>
	    <param name="map_frame" value="map"/>
        <param name="transform_publish_period" value="0.08"/>
    </node>

    <!-- RViz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find orb)/rviz/config.rviz"/>

    <!-- RQT graph -->
    <node name="rqt_graph" pkg="rqt_graph" type="rqt_graph" output="screen"/>
</launch>
